<h1>Listing topics</h1>

<table>
  <tr>
    <th>Forum</th>
    <th>User</th>
    <th>Subject</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @topics.each do |topic| %>
  <tr>
    <td><%= topic.forum %></td>
    <td><%= topic.user %></td>
    <td><%= topic.subject %></td>
    <td><%= topic.body %></td>
    <td><%= link_to 'Show', topic %></td>
    <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
    <td><%= link_to 'Destroy', topic, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

